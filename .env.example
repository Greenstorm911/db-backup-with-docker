# Database Configuration (REQUIRED)
DB_TYPE=postgresql
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=your-username
DB_PASSWORD=your-password
DB_DATABASE=your-database-name

# Backup Configuration (OPTIONAL - defaults provided)
BACKUP_DIR=/backups
BACKUP_RETENTION_COUNT=3
BACKUP_COMPRESSION=zip
CRON_SCHEDULE=0 3 * * *

# Telegram Notifications (OPTIONAL)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Email Notifications (OPTIONAL)
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com

# Logging Configuration (OPTIONAL)
LOG_LEVEL=INFO
LOG_FILE=/var/log/backup/backup.log

# Project Promotion (OPTIONAL)
# Set to false to disable the star project reminder message
SHOW_STAR_MESSAGE=true

# Language Configuration (OPTIONAL)
# Supported languages: 'en' (English), 'fa' (Persian/Farsi)
LANGUAGE=en
